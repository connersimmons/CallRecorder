<?xml version="1.0" encoding="utf-8"?>
<com.github.stephenvinouze.materialnumberpickercore.MaterialNumberPicker
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/number_picker"
        app:mnpEditable="false"
        app:mnpMaxValue="9"
        app:mnpMinValue="3"
        app:mnpSeparatorColor="@color/colorPrimary"
        app:mnpTextColor="@color/colorPrimaryDark"
        app:mnpTextSize="16sp"
        app:mnpTextStyle="bold"
        app:mnpValue="3"
        app:mnpWrapped="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>